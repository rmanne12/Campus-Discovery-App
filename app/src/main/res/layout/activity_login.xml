<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login">
    <TextView
        android:id="@+id/titlebanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/quit"
        android:layout_marginTop="40sp"
        />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:paddingLeft="10sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="28dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_atop"
        android:hint="Email"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/new_blue"
        android:textColorHint="@color/new_blue"
        app:layout_constraintTop_toBottomOf="@+id/titlebanner"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/password"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="50sp"
        android:paddingLeft="10sp"
        android:hint="Password"
        android:fontFamily="sans-serif-medium"
        android:textColorHint="@color/new_blue"
        android:textColor="@color/new_blue"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="Log In"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:backgroundTint="@color/new_blue"
        />

    <TextView
        android:id="@+id/newAcct"
        android:textColor="@color/bright_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logInButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="New to Campus Discovery?"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15dp"
        app:layout_constraintRight_toLeftOf="@id/registerLink"
        />

    <TextView
        android:id="@+id/registerLink"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/logInButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:textSize="15dp"
        android:text="Register!"
        app:layout_constraintLeft_toRightOf="@id/newAcct"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/new_blue"
        android:text="Exit"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>